<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
<%- include('header') %>

    ***********************************-->

    <!--**********************************
    Content body start
***********************************-->
    <div class="content-body">
        <div class="container-fluid">
            <div class="row page-titles mx-0">
                <div class="col-sm-6 p-md-0">
                    <div class="welcome-text">
                        <h4>Hi, welcome to silder pages!</h4>
                        <span class="ml-1">Element</span>
                    </div>
                </div>
                <div class="col-sm-6 p-md-0 justify-content-sm-end mt-2 mt-sm-0 d-flex">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="javascript:void(0)">Form</a></li>
                        <li class="breadcrumb-item active"><a href="javascript:void(0)">Element</a></li>
                    </ol>
                </div>
            </div>
            <!-- row -->
            <div class="card w-75">
                <div class="card-header">
                    <h4 class="card-title">Silder</h4>
                </div>
                <div class="card-body">
                    <div class="basic-form">
                        <form method="post" action="/user/sildercreadt" enctype="multipart/form-data">
                            <div class="form-group">
                                <label for="formFileMultiple" class="form-label">Main Title</label>
                                <input class="form-control" type="text" id="formFileMultiple" name="title1">
                            </div>
                            <div class="form-group">
                                <label for="formFileMultiple" class="form-label">Sub Title</label>
                                <input class="form-control" type="text" id="formFileMultiple" name="title2">
                            </div>
                            <div class="form-group">
                                <label for="formFileMultiple" class="form-label">Images uplodes</label>
                                <input class="form-control" type="file" name="images" id="formFileMultiple" multiple>
                            </div>
                            <input type="submit" value="Submit" class="btn btn-primary">
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Basic</h4>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-responsive-sm">
                                <thead>
                                    <tr>
                                        <th>Id</th>
                                        <th>Images</th>
                                        <th>Main Title</th>
                                        <th>Sub Title</th>
                                        <th>Action</th>
                                        <th>Status</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% data.map((val,index)=>{ %>
                                        <tr>
                                            <td>
                                                <%= index+1 %>
                                            </td>
                                            <td><img src="<%= val.images %>" width="100" alt=""></td>
                                            <td>
                                                <%= val.title1 %>
                                            </td>
                                            <td>
                                                <%= val.title2 %>
                                            </td>
                                            <td>
                                                <a href="/user/deleteData/<%= val.id %>"
                                                    class="btn btn-primary">Deleted</a>
                                                <a href="/user/EditData/<%= val.id %>"
                                                    class="btn btn-secondary">Edit</a>
                                            </td>
                                            <td>
                                                <% if(val.status === '1') { %>

                                                    <a href="/user/active/<%= val.id %>"><span
                                                            class="badge badge-pill badge-success">Active</span></a>

                                                    <% } else{ %>

                                                        <a href="/user/deactive/<%= val.id %>"><span
                                                                class="badge badge-pill badge-danger">Deactive</span></a>
                                                        <% } %>
                                            </td>   
                                        </tr>
                                        <% }) %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>


        </div>

    </div>
    </div>
    <%- include('footer') %>