<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
<%- include('header') %>

    ***********************************-->

    <!--**********************************
    Content body start
***********************************-->
    <div class="content-body">
        <div class="container-fluid">
            <div class="row page-titles mx-0">
                <div class="col-sm-6 p-md-0">
                    <div class="welcome-text">
                        <h4>Hi, welcome to silder pages!</h4>
                        <span class="ml-1">Element</span>
                    </div>
                </div>
                <div class="col-sm-6 p-md-0 justify-content-sm-end mt-2 mt-sm-0 d-flex">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="javascript:void(0)">Form</a></li>
                        <li class="breadcrumb-item active"><a href="javascript:void(0)">Element</a></li>
                    </ol>
                </div>
            </div>
            <!-- row -->
            <div class="card w-75">
                <div class="card-header">
                    <h4 class="card-title">Silder</h4>
                </div>
                <div class="card-body">
                    <div class="basic-form">
                        <form method="post" action="/user/postcreate" enctype="multipart/form-data">
                            <div class="form-group">
                                <label for="formFileMultiple" class="form-label"> Title</label>
                                <input class="form-control" type="text" id="formFileMultiple" name="title">
                            </div>
                            <div class="form-group">
                                <label for="formFileMultiple" class="form-label">Aother</label>
                                <input class="form-control" type="text" id="formFileMultiple" name="aother">
                            </div>
                            <div class="form-group">
                                <label for="formFileMultiple" class="form-label">Date</label>
                                <input class="form-control" type="text" id="formFileMultiple" name="data">
                            </div>
                            <div class="form-group">
                                <label for="formFileMultiple" class="form-label">Category</label>
                                <input class="form-control" type="text" id="formFileMultiple" name="category">
                            </div>
                            <div class="form-group">
                                <label for="formFileMultiple" class="form-label">dis</label>
                                <textarea  class="form-control" type="text" id="formFileMultiple" name="des" cols="20" rows="8"></textarea>
                            </div>
                            <div class="form-group">
                                <label for="formFileMultiple" class="form-label">Post Images uplodes</label>
                                <input class="form-control" type="file" name="images" id="formFileMultiple" multiple>
                            </div>
                            <input type="submit" value="Submit" class="btn btn-primary">
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Basic</h4>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-responsive-sm">
                                <thead>
                                    <tr>
                                        <th>Id</th>
                                        <th>Images</th>
                                        <th>Title</th>
                                        <th>Aother</th>
                                        <th>Date</th>
                                        <th>Category</th>
                                        <th>dis</th>
                                        <th>Action</th>
                                        <th>Status</th>
                                    </tr>
                                </thead>
                                <% data.map((val,index)=>{ 
                                    %>
                                     <tr>
                                         <td><%= index+1 %></td>
                                         <td><img src="<%= val.images %>" width="100" alt=""></td>
                                        <td><%= val.title %></td>
                                        <td><%= val.aother %></td>
                                        <td><%= val.data %></td>
                                        <td><%= val.category %></td>
                                        <td><%= val.des.substring(0,50) %></td>
                                        <td>
                                            <a href="/user/deletepost/<%= val.id %>"
                                                class="btn btn-primary">Deleted</a>
                                            <a href="/user/editpost/<%= val.id %>"
                                                class="btn btn-secondary">Edit</a>
                                        </td>
                                        <td>
                                            <% if(val.status == '1') { %>

                                                <a href="/user/postactive/<%= val.id %>"><span
                                                        class="badge badge-pill badge-success">Active</span></a>

                                                <% } else{ %>

                                                    <a href="/user/postdeactive/<%= val.id %>"><span
                                                            class="badge badge-pill badge-danger">Deactive</span></a>
                                                    <% } %>
                                        </td>   
                                     </tr>
                                        
                                  <%  
                                 }) %>
                            </table>
                        </div>
                    </div>
                </div>
            </div>


        </div>

    </div>
    </div>
    <%- include('footer') %>